{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "target": "esnext",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@assets": ["assets"],
      "@components": ["components/index"],
      "@pages": ["pages/index"],
      "@routes": ["routes"],
      "@static": ["static"],
      "@utils": ["utils"],

      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@routes/*": ["routes/*"],
      "@static/*": ["static/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": [
    "build",
    "node_modules",
    "public"
  ]
}